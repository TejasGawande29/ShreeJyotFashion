# ========================================
# Shreejyot Fashion - Backend Environment Configuration
# ========================================
# IMPORTANT: Never commit actual .env file to version control
# Copy this file as .env and fill in your actual values

# ========================================
# APPLICATION
# ========================================
NODE_ENV=development
PORT=5000
APP_NAME=Shreejyot Fashion API
API_VERSION=v1
BASE_URL=http://localhost:5000

# ========================================
# DATABASE - PostgreSQL
# ========================================
DATABASE_URL=postgresql://username:password@localhost:5432/shreejyot_db
DB_HOST=localhost
DB_PORT=5432
DB_NAME=shreejyot_db
DB_USER=your_db_username
DB_PASSWORD=your_db_password
DB_SSL=false
DB_POOL_MIN=2
DB_POOL_MAX=10

# ========================================
# REDIS (Session & Caching)
# ========================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_TTL=3600

# ========================================
# JWT AUTHENTICATION
# ========================================
JWT_SECRET=your-super-secret-jwt-key-min-32-characters
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-refresh-token-secret-key
JWT_REFRESH_EXPIRES_IN=30d

# ========================================
# ENCRYPTION
# ========================================
ENCRYPTION_KEY=your-32-character-encryption-key
BCRYPT_SALT_ROUNDS=10

# ========================================
# EMAIL CONFIGURATION
# ========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password
EMAIL_FROM=Shreejyot Fashion <noreply@shreejyot.com>

# Email Service (optional: sendgrid, mailgun, ses)
EMAIL_SERVICE=smtp
SENDGRID_API_KEY=
MAILGUN_API_KEY=
MAILGUN_DOMAIN=

# ========================================
# SMS CONFIGURATION (Twilio)
# ========================================
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890
SMS_ENABLED=true

# ========================================
# PAYMENT GATEWAYS
# ========================================
# Razorpay (Primary for India)
RAZORPAY_KEY_ID=rzp_test_xxxxxxxxxxxxx
RAZORPAY_KEY_SECRET=your_razorpay_secret_key
RAZORPAY_WEBHOOK_SECRET=your_webhook_secret

# Stripe (Optional)
STRIPE_PUBLIC_KEY=pk_test_xxxxxxxxxxxxx
STRIPE_SECRET_KEY=sk_test_xxxxxxxxxxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxxxxxxxxxx

# Payment Settings
PAYMENT_CURRENCY=INR
PAYMENT_TIMEOUT=15

# ========================================
# CLOUD STORAGE (AWS S3)
# ========================================
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=ap-south-1
AWS_S3_BUCKET=shreejyot-fashion-images
AWS_CLOUDFRONT_URL=https://dxxxxx.cloudfront.net

# Alternative: Cloudinary
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# ========================================
# ELASTICSEARCH (Search)
# ========================================
ELASTICSEARCH_NODE=http://localhost:9200
ELASTICSEARCH_USERNAME=elastic
ELASTICSEARCH_PASSWORD=your_elastic_password
ELASTICSEARCH_INDEX_PREFIX=shreejyot_

# ========================================
# LOGGING
# ========================================
LOG_LEVEL=debug
LOG_FILE=logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=7d

# ========================================
# CORS & FRONTEND
# ========================================
FRONTEND_URL=http://localhost:3000
CORS_ORIGIN=http://localhost:3000,http://localhost:3001
CORS_CREDENTIALS=true

# ========================================
# RATE LIMITING
# ========================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ========================================
# GOOGLE OAUTH (Optional)
# ========================================
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_CALLBACK_URL=http://localhost:5000/api/v1/auth/google/callback

# ========================================
# FACEBOOK OAUTH (Optional)
# ========================================
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret
FACEBOOK_CALLBACK_URL=http://localhost:5000/api/v1/auth/facebook/callback

# ========================================
# ANALYTICS (Google Analytics)
# ========================================
GA_TRACKING_ID=UA-XXXXXXXXX-X
GA_MEASUREMENT_ID=G-XXXXXXXXXX

# ========================================
# RENTAL SPECIFIC SETTINGS
# ========================================
RENTAL_MIN_DURATION_DAYS=3
RENTAL_MAX_DURATION_DAYS=30
RENTAL_DEFAULT_LATE_FEE=100
RENTAL_SECURITY_DEPOSIT_PERCENTAGE=50
RENTAL_ADVANCE_BOOKING_DAYS=7
RENTAL_REMINDER_DAYS_BEFORE=2
RENTAL_AUTO_REFUND_DAYS=7

# ========================================
# INVENTORY & STOCK
# ========================================
LOW_STOCK_THRESHOLD=5
OUT_OF_STOCK_THRESHOLD=0
AUTO_STOCK_ALERTS=true

# ========================================
# ORDER SETTINGS
# ========================================
ORDER_CANCELLATION_WINDOW_HOURS=24
ORDER_AUTO_CANCEL_PENDING_HOURS=48
ORDER_DELIVERY_ESTIMATE_DAYS=7

# ========================================
# CRON JOBS
# ========================================
CRON_ENABLED=true
CRON_CHECK_OVERDUE_RENTALS=0 */6 * * *
CRON_SEND_RENTAL_REMINDERS=0 9 * * *
CRON_PROCESS_REFUNDS=0 10 * * *
CRON_UPDATE_INVENTORY=0 2 * * *

# ========================================
# WEBHOOK URLS
# ========================================
WEBHOOK_ORDER_SUCCESS=
WEBHOOK_RENTAL_STARTED=
WEBHOOK_RENTAL_OVERDUE=

# ========================================
# ADMIN
# ========================================
ADMIN_EMAIL=admin@shreejyot.com
ADMIN_PASSWORD=Change_This_Secure_Password_123!
SUPER_ADMIN_SECRET=your_super_admin_secret_key

# ========================================
# FEATURE FLAGS
# ========================================
ENABLE_RENTAL=true
ENABLE_COD=true
ENABLE_WISHLIST=true
ENABLE_REVIEWS=true
ENABLE_REFERRAL=true
ENABLE_NOTIFICATIONS=true

# ========================================
# SECURITY
# ========================================
SESSION_SECRET=your-session-secret-min-32-characters
CSRF_SECRET=your-csrf-token-secret
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001
TRUSTED_PROXIES=

# ========================================
# THIRD PARTY INTEGRATIONS
# ========================================
# Shiprocket (Shipping)
SHIPROCKET_EMAIL=your_shiprocket_email
SHIPROCKET_PASSWORD=your_shiprocket_password
SHIPROCKET_API_URL=https://apiv2.shiprocket.in/v1

# Google Maps (Address validation)
GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# Sentry (Error tracking)
SENTRY_DSN=https://xxxxx@sentry.io/xxxxx

# ========================================
# DEVELOPMENT ONLY
# ========================================
DEBUG=false
SEED_DATABASE=false
MOCK_PAYMENTS=false
MOCK_SMS=false
MOCK_EMAIL=false
