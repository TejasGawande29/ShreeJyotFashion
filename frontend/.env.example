NEXT_PUBLIC_RENTAL_MAX_DAYS=30
NEXT_PUBLIC_FREE_SHIPPING_THRESHOLD=1000

# ========================================
# SEARCH & FILTERS
# ========================================
NEXT_PUBLIC_PRODUCTS_PER_PAGE=24
NEXT_PUBLIC_SEARCH_DEBOUNCE_MS=300
NEXT_PUBLIC_ENABLE_FILTERS=true

# ========================================
# SEO & META
# ========================================
NEXT_PUBLIC_DEFAULT_META_TITLE=Shreejyot Fashion - Premium Clothing Sale & Rental
