NEXT_PUBLIC_FIREBASE_VAPID_KEY=your_vapid_key

# ========================================
# CHAT SUPPORT
# ========================================
# Tawk.to
NEXT_PUBLIC_TAWK_PROPERTY_ID=your_tawk_property_id
NEXT_PUBLIC_TAWK_WIDGET_ID=your_tawk_widget_id

# Intercom
NEXT_PUBLIC_INTERCOM_APP_ID=your_intercom_app_id

# ========================================
# THIRD PARTY SCRIPTS
