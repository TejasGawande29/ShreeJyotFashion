# ========================================
# Shreejyot Fashion - Frontend Environment Configuration
# ========================================
# IMPORTANT: Never commit actual .env file to version control
# Copy this file as .env.local and fill in your actual values

# ========================================
# APPLICATION
# ========================================
NEXT_PUBLIC_APP_NAME=Shreejyot Fashion
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_ENVIRONMENT=development

# ========================================
# API CONFIGURATION
# ========================================
NEXT_PUBLIC_API_URL=http://localhost:5000/api
NEXT_PUBLIC_API_TIMEOUT=30000

# ========================================
# WEBSITE URLs
# ========================================
NEXT_PUBLIC_SITE_URL=http://localhost:3000
NEXT_PUBLIC_ADMIN_URL=http://localhost:3001

# ========================================
# PAYMENT GATEWAYS (Public Keys Only)
# ========================================
# Razorpay
NEXT_PUBLIC_RAZORPAY_KEY_ID=rzp_test_xxxxxxxxxxxxx

# Stripe (Optional)
NEXT_PUBLIC_STRIPE_PUBLIC_KEY=pk_test_xxxxxxxxxxxxx

# ========================================
# GOOGLE SERVICES
# ========================================
# Google OAuth
NEXT_PUBLIC_GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com

# Google Analytics
NEXT_PUBLIC_GA_TRACKING_ID=UA-XXXXXXXXX-X
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Google Maps
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# ========================================
# FACEBOOK
# ========================================
NEXT_PUBLIC_FACEBOOK_APP_ID=your_facebook_app_id
NEXT_PUBLIC_FACEBOOK_PIXEL_ID=your_facebook_pixel_id

# ========================================
# CLOUDINARY (Image CDN)
# ========================================
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=your_cloud_name
NEXT_PUBLIC_CLOUDINARY_UPLOAD_PRESET=your_upload_preset

# Or AWS CloudFront
NEXT_PUBLIC_CDN_URL=https://dxxxxx.cloudfront.net

# ========================================
# SOCIAL MEDIA
# ========================================
NEXT_PUBLIC_INSTAGRAM_URL=https://instagram.com/shreejyotfashion
NEXT_PUBLIC_FACEBOOK_URL=https://facebook.com/shreejyotfashion
NEXT_PUBLIC_TWITTER_URL=https://twitter.com/shreejyotfashion
NEXT_PUBLIC_PINTEREST_URL=https://pinterest.com/shreejyotfashion
NEXT_PUBLIC_YOUTUBE_URL=https://youtube.com/@shreejyotfashion

# ========================================
# CONTACT INFORMATION
# ========================================
NEXT_PUBLIC_CONTACT_EMAIL=info@shreejyot.com
NEXT_PUBLIC_CONTACT_PHONE=+91 9876543210
NEXT_PUBLIC_SUPPORT_EMAIL=support@shreejyot.com
NEXT_PUBLIC_WHATSAPP_NUMBER=919876543210

# ========================================
# BUSINESS INFORMATION
# ========================================
NEXT_PUBLIC_COMPANY_NAME=Shreejyot Fashion Pvt Ltd
NEXT_PUBLIC_GST_NUMBER=27XXXXX1234X1Z5
NEXT_PUBLIC_BUSINESS_ADDRESS=123 Fashion Street, Mumbai, Maharashtra 400001

# ========================================
# FEATURE FLAGS
# ========================================
NEXT_PUBLIC_ENABLE_RENTAL=true
NEXT_PUBLIC_ENABLE_COD=true
NEXT_PUBLIC_ENABLE_WISHLIST=true
NEXT_PUBLIC_ENABLE_REVIEWS=true
NEXT_PUBLIC_ENABLE_SOCIAL_LOGIN=true
NEXT_PUBLIC_ENABLE_CHAT_SUPPORT=true
NEXT_PUBLIC_ENABLE_PWA=true

# ========================================
# APP SETTINGS
# ========================================
NEXT_PUBLIC_CURRENCY=INR
NEXT_PUBLIC_CURRENCY_SYMBOL=â‚¹
NEXT_PUBLIC_LOCALE=en-IN
