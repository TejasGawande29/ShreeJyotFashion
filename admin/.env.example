# ========================================
# Shreejyot Fashion - Admin Panel Environment Configuration
# ========================================
# IMPORTANT: Never commit actual .env file to version control
# Copy this file as .env.local and fill in your actual values

# ========================================
# APPLICATION
# ========================================
NEXT_PUBLIC_APP_NAME=Shreejyot Admin
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_ENVIRONMENT=development

# ========================================
# API CONFIGURATION
# ========================================
NEXT_PUBLIC_API_URL=http://localhost:5000/api/v1
NEXT_PUBLIC_API_TIMEOUT=30000

# ========================================
# URLs
# ========================================
NEXT_PUBLIC_ADMIN_URL=http://localhost:3001
NEXT_PUBLIC_CUSTOMER_SITE_URL=http://localhost:3000

# ========================================
# AUTHENTICATION
# ========================================
NEXT_PUBLIC_SESSION_TIMEOUT=3600000
NEXT_PUBLIC_REQUIRE_2FA=false

# ========================================
# CLOUDINARY (Image Upload)
# ========================================
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=your_cloud_name
NEXT_PUBLIC_CLOUDINARY_UPLOAD_PRESET=admin_upload_preset
NEXT_PUBLIC_CLOUDINARY_API_KEY=your_api_key

# Or AWS
NEXT_PUBLIC_AWS_S3_BUCKET=shreejyot-fashion-images
NEXT_PUBLIC_CDN_URL=https://dxxxxx.cloudfront.net

# ========================================
# GOOGLE SERVICES
# ========================================
# Google Analytics (Admin tracking)
NEXT_PUBLIC_GA_TRACKING_ID=UA-XXXXXXXXX-X

# ========================================
# FEATURE FLAGS
# ========================================
NEXT_PUBLIC_ENABLE_RENTAL_MANAGEMENT=true
NEXT_PUBLIC_ENABLE_BULK_UPLOAD=true
NEXT_PUBLIC_ENABLE_ADVANCED_REPORTS=true
NEXT_PUBLIC_ENABLE_EMAIL_TEMPLATES=true
NEXT_PUBLIC_ENABLE_SMS_NOTIFICATIONS=true

# ========================================
# DISPLAY SETTINGS
# ========================================
NEXT_PUBLIC_ITEMS_PER_PAGE=25
NEXT_PUBLIC_CURRENCY=INR
NEXT_PUBLIC_CURRENCY_SYMBOL=â‚¹
NEXT_PUBLIC_TIMEZONE=Asia/Kolkata
NEXT_PUBLIC_DATE_FORMAT=DD/MM/YYYY

# ========================================
# RENTAL SETTINGS (Admin Display)
# ========================================
NEXT_PUBLIC_RENTAL_DEFAULT_LATE_FEE=100
NEXT_PUBLIC_RENTAL_MIN_DAYS=3
NEXT_PUBLIC_RENTAL_MAX_DAYS=30
NEXT_PUBLIC_SECURITY_DEPOSIT_PERCENTAGE=50

# ========================================
# NOTIFICATIONS
# ========================================
# Firebase (Push Notifications for Admin)
NEXT_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-project-id
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=123456789
NEXT_PUBLIC_FIREBASE_APP_ID=1:123456789:web:abcdef

# ========================================
# SHIPPING INTEGRATION
# ========================================
# Shiprocket (Display only)
NEXT_PUBLIC_SHIPROCKET_API_URL=https://apiv2.shiprocket.in/v1

# ========================================
# CHARTS & ANALYTICS
# ========================================
NEXT_PUBLIC_CHART_REFRESH_INTERVAL=300000
NEXT_PUBLIC_ENABLE_REAL_TIME_UPDATES=true

# ========================================
# EXPORT OPTIONS
# ========================================
NEXT_PUBLIC_MAX_EXPORT_ROWS=10000
NEXT_PUBLIC_EXPORT_FORMATS=csv,excel,pdf

# ========================================
# ERROR TRACKING
# ========================================
NEXT_PUBLIC_SENTRY_DSN=https://xxxxx@sentry.io/xxxxx
NEXT_PUBLIC_SENTRY_ENVIRONMENT=development

# ========================================
# DEVELOPMENT ONLY
# ========================================
NEXT_PUBLIC_DEBUG_MODE=false
NEXT_PUBLIC_MOCK_API=false
NEXT_PUBLIC_SHOW_API_LOGS=false
